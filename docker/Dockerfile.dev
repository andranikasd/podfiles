FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y --no-install-recommends \
    bash \
    ca-certificates \
    curl \
    git \
    gawk \ 
    jq \
    sed \
    shellcheck \
    bats \
    wget \
    xz-utils \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

# Non-root for nicer UX
RUN useradd -ms /bin/bash dev
USER dev
WORKDIR /work

CMD ["/bin/bash"]
